<h3><%= facade.character_count %> members</h3>
<section class='members'>

<% facade.characters.each do |char| %>
  <ul class='character'>
    <li class='name'><%= char.name %></li>
    <li class='role'><%= char.role %></li>
    <li class='house'><%= char.house %></li>
    <li class='patronus'><%= char.patronus %></li>
  </ul>
<% end %>
</section>
